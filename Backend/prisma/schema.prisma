generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  ID                Int      @id @default(autoincrement())
  NombreUsuario     String
  Contraseña        String
  email             String
  HorasTransmision  Int
  Monedas           Int
  NivelStreams      Int
  Puntos            Int
  fechaCreacion     DateTime @default(now())
  regalos Regalo[]
  // Relaciones
  streamerSuscripciones Suscripcion[] @relation("StreamerSuscripciones")
  viewerSuscripciones   Suscripcion[] @relation("ViewerSuscripciones")
}

model Suscripcion {
  ID_Streamer Int
  ID_Viewer   Int
  NivelViewer Int   @default(0)

  // Claves foráneas
  streamer Usuario @relation("StreamerSuscripciones", fields: [ID_Streamer], references: [ID])
  viewer   Usuario @relation("ViewerSuscripciones", fields: [ID_Viewer], references: [ID])

  @@id([ID_Streamer, ID_Viewer])
}

model Regalo {
  ID_Regalo      Int      @id @default(autoincrement())
  NombreRegalo   String
  PrecioRegalo   Int
  DescripcionRegalo String
  icono          String
  ID_Streamer    Int

  streamer Usuario @relation(fields: [ID_Streamer], references: [ID])
}

model Categoria {
  ID     Int    @id @default(autoincrement())
  Nombre String
  juegos Juego[]
}

model Juego {
  ID_Juego   Int      @id @default(autoincrement())
  Nombre     String
  Descripcion String?
  CategoriaID Int
  categoria  Categoria @relation(fields: [CategoriaID], references: [ID])
}